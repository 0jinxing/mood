{
  "include": ["packages"],
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "compileOnSave": true
}
