{
  "include": ["packages"],
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "target": "ES5",
    "lib": ["ES2017", "DOM"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "compileOnSave": true
}
