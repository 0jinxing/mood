{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts .",
    "build": "NODE_OPTIONS=\"--experimental-loader ts-node/esm --no-warnings\" node ./scripts/build.ts; npm run types",
    "types": "pnpm -r --filter=@mood/* run types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@types/glob": "^7.2.0"
  }
}
